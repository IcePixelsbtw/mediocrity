@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authorization</title>
    <link href="https://fonts.googleapis.com/css2?family=Handjet:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth_form.css">
</head>
<body>
    <div class="container">
        <h2 class="regh">Авторизация</h2>
        <form action="CreateProject" method="get">////////////////////////////////////////////////////////////////////
          <div class="form-group">
            <input type="email" id="email" name="email" required placeholder="oralcumshot@mediocrities.com" asp-for = "Email">
          </div>
          <div class="form-group">
            <input type="password" id="password" name="password" required placeholder="Password" class="pass" asp-for = "Password">
          </div>
          <div class="form-group-right">
            <a href="#">Забув пароль?</a>
          </div>
          
          
          <div class="form-group">
            <input asp-controller="Home" asp-action="CreateProject" type="submit" value="Увійти" style="font-family: 'Handjet', cursive; font-size: 18px;">
          </div>
          <div class="form-group">
            <a asp-controller="Home" asp-action="Reg">Ще не маєш акаунту?</a>
          </div>
        </form>
      </div>
</body>
</html>