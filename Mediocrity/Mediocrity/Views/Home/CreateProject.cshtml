@model Project

@{
    string wasCreated = ViewBag.IsCreated;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/create_project.css">
    <title>Створення проєкту</title>
    <link href="https://fonts.googleapis.com/css2?family=Handjet:wght@700&display=swap" rel="stylesheet">
</head>
<body> 
    <div class="container">
        <h2>Створення проєкту</h2>
        <form action="CreateProject" method="post">
          <div class="form-group">
            <input type="text" required placeholder="Назва проєкту"
                asp-for="Title">
          </div>
          <div class="form-group">
            <textarea asp-for="Description" type="text" class="text_area" required placeholder="Опис"
                ></textarea>
          </div>
            <div class="form-group inline">
                <div>
                    <input asp-for="ParticipantsNumber" required placeholder="Число учасників">
                </div>
                <div>
                    <input asp-for="Price" class="price" required placeholder="Ціна">
                </div>
            </div>
            <div class="form-group_contact inline">
              <input asp-for="ContactInfo" class="contact" required placeholder="Зв'язок">
            </div>
          <div class="form-group">
            <input type="submit" value="Створити проєкт" style="font-family: 'Handjet', cursive; font-size: 16px;">
          </div>
            @if (wasCreated == "0")
            {
                <div class="alert alert-danger" id="errorBox">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close" id="closeButton">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i style="color: red">Помилка: такий акаунт вже існує.</i>
                </div>
            }
        </form>
      </div>
    <script>
            document.getElementById('closeButton').addEventListener('click', function () {
            document.getElementById('errorBox').style.display = 'none';
        });
    </script>

</body>
</html>